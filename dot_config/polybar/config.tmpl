[bar/main]
{{- if .hidpi }}
height = 44
radius = 10
dpi = 160
border-left-size = 15
border-right-size = 15
font-0 = "PP Neue Montreal:style=Medium:pixelsize=12;6"
font-1 = "Symbols Nerd Font:style=Regular:pixelsize=12;5"
{{ else }}
height = 30
radius = 5
border-left-size = 10
border-right-size = 10
font-0 = "Inter Variable:style=Medium:pixelsize=12;3"
font-1 = "Symbols Nerd Font:style=Regular:pixelsize=12;3"
{{ end }}
monitor = ${env:MONITOR}

border-color = #00000000
border-top-size = 15

background = "#991e1e2e"
foreground = "#cdd6f4"
padding = 4
{{ if .hidpi }}
module-margin = 2
{{ else }}
module-margin = 1
{{ end }}

scroll-up = i3-msg workspace next_on_output
scroll-down = i3-msg workspace prev_on_output

modules-left = i3
modules-center = tray
modules-right = evolution-mail pulseaudio {{ if .laptop }}battery {{ end }}date

#[module/timer]
#type = custom/script
#exec = {{ .chezmoi.homeDir }}/Projects/cydo/timer/timer polybar-status
#interval = 1
#format = <label>
#format-underline = #f00

[module/evolution-mail]
type = custom/script
exec = bash ~/.config/polybar/unread.sh
interval = 60
format-prefix = " "
format-prefix-padding = 3pt
format-padding = 3
click-left = env GTK_THEME=Adwaita:light evolution

{{ if .laptop }}
[module/battery]
type = internal/battery
full-at = 99

format-full = <ramp-capacity>  <label-full>
format-charging = <ramp-capacity>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
ramp-capacity-0 = %{F#f38ba8}
ramp-capacity-1 = %{F#fab387}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = %{F#a6e3a1}

time-format = %H:%M
label-discharging = %percentage%% (%time%)
label-charging = %percentage%% (%time%)
{{ end }}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume>  <label-volume>

{{ if .hidpi }}
format-volume-padding = 12px
format-muted-padding = 12px
{{ end }}

label-muted =   Muet

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/date]
type = internal/date

interval = 1.0
date = %d/%m/%Y
time = "%H:%M"

format = <label>
format-prefix = 󰥔
format-prefix-padding = 2
format-margin = 3px

label = %date% %time%

[module/i3]
type = internal/i3

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-default = 

label-unfocused-foreground = #bac2de
label-focused-foreground = #74c7ec
label-separator = " "
label-separator-padding = 2

index-sort = true
pin-workspaces = true

[module/tray]
type = internal/tray
